{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "/.e2e/.spec/.ts$",
  "transform": {
    "^.+/.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.)$": "/src/$1"
  },
  "moduleDirectories": ["node_modules", "src"],
  "collectCoverageFrom": ["**/.(t|j)s"],
  "coverageDirectory": "./coverage",
  "testTimeout": 30000,
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  }
}